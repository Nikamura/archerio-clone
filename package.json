{
  "name": "arrow-game",
  "version": "0.1.0",
  "description": "Arrow Game - roguelike shooter web game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:capacitor": "CAPACITOR=true tsc && CAPACITOR=true vite build",
    "preview": "vite preview",
    "lint": "eslint src --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:visual": "vitest run --config vitest.visual.config.ts",
    "test:all": "vitest run --config vitest.all.config.ts",
    "generate-image": "tsx scripts/generate-image.ts",
    "generate-sprite": "tsx scripts/generate-sprite.ts",
    "remove-bg": "tsx scripts/remove-background.ts",
    "optimize-assets": "tsx scripts/optimize-assets.ts",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "pnpm run build:capacitor && cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "cap:run:ios": "cap run ios",
    "cap:run:android": "cap run android"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@sentry/browser": "^10.32.1",
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.5",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.34.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^4.0.16"
  }
}
